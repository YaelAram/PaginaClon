---
interface Props {
  titulo: string;
  mensaje: string;
  ruta: string;
}

const {titulo, mensaje, ruta} = Astro.props;
const [seccion1, seccion2] = mensaje.split("@aragon.unam.mx")
---

<article>
  <h5>{titulo}</h5>
  <p>{seccion1} <strong>@aragon.unam.mx</strong> {seccion2}</p>
  <a href={ruta}>
    <button type="button" class="btn">INICIAR SESIÃ“N</button>
  </a>
</article>

<style>
  article {
		margin-top: 48px;
	}

  h5 {
		font-weight: 500;
		margin-bottom: 24px;
	}

	p {
		color: #6e7579;
	}

  button {
		color: white;
		width: 100%;
		background-color: #28B1A4;
		padding: 10 16;
		font-size: 18px;
		letter-spacing: 3px;
	}

	button:hover {
